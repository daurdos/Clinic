@model IEnumerable<ClinicNetCore.Models.Patient>
@{
    ViewData["Title"] = "Каталог товаров";
}
<h3>Patients</h3>
<table class="table-condensed">
    <tr>
        <td>Name</td>
        <td>Address</td>
        <td>Phone</td>
        <td></td>
    </tr>
    @foreach (var patient in Model)
    {
    <tr>
        <td>@patient.FName</td>
        <td>@patient.Address</td>
        <td>@patient.Phone</td>
        <td><a href="~/Home/FillVisit/@patient.Id">Fill</a> | </td>
        <td><a href="~/Home/DeletePatient/@patient.Id">Delete</a> | </td>
        <td><a href="~/Home/UpdatePatient/@patient.Id">Update</a> | </td>
    </tr>
    }

    <tr>
        <td><a href="~/Home/FillPatient">Add</a></td>
    </tr>

    <tr>
        <td><a href="~/Home/SearchPatient">Search</a></td>
    </tr>

</table>
